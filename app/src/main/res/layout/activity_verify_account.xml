<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3x"
    tools:context="com.andresual.dev.urbankabinet.Activity.VerifyAccountActivity">

    <ImageView
        android:id="@+id/iv_logo_verify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/urbanlogo3x"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:id="@+id/tv_pin_number"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:text="Confirm your PIN"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/iv_logo_verify"
        app:layout_constraintRight_toRightOf="@+id/iv_logo_verify"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_verify"
        android:layout_marginRight="8dp"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/et_pin_number"
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:maxLength="4"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_frame"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/tv_pin_number"
        app:layout_constraintRight_toRightOf="@+id/tv_pin_number"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pin_number"
        app:layout_constraintHorizontal_bias="0.497"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_submit_pin"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="submit"
        android:background="@drawable/rounded_button"
        app:layout_constraintLeft_toLeftOf="@+id/iv_logo_verify"
        android:layout_marginLeft="32dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_resend"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="128dp"
        android:layout_marginStart="32dp" />

    <Button
        android:id="@+id/btn_resend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resend"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/btn_submit_pin"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_submit_pin"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="@+id/iv_logo_verify"
        android:layout_marginEnd="33dp" />

    <TextView
        android:id="@+id/tv_cd"
        android:layout_width="26dp"
        android:layout_height="17dp"
        android:text="(30)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btn_resend"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_resend"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/btn_resend" />


</android.support.constraint.ConstraintLayout>
