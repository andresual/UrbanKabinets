<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UrbanKabinet" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimary</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="UrbanKabinet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="UrbanKabinet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="UrbanKabinet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
